<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/animation_left_ear"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@color/green"
        app:layout_constraintBottom_toTopOf="@+id/animation_center"
        app:layout_constraintRight_toLeftOf="@+id/animation_center" />

    <TextView
        android:id="@+id/animation_right_ear"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@color/green"
        app:layout_constraintBottom_toTopOf="@+id/animation_center"
        app:layout_constraintLeft_toRightOf="@+id/animation_center" />


    <TextView
        android:id="@+id/animation_center"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="100dp"
        android:background="@color/green"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/animation_left_eye"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginLeft="50px"
        android:layout_marginStart="50px"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        app:layout_constraintLeft_toLeftOf="@+id/animation_center"
        app:layout_constraintTop_toTopOf="@+id/animation_center" />


    <TextView
        android:id="@+id/animation_right_eye"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginEnd="50px"
        android:layout_marginRight="50px"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        app:layout_constraintRight_toRightOf="@+id/animation_center"
        app:layout_constraintTop_toTopOf="@+id/animation_center" />


    <TextView
        android:id="@+id/animation_right_mouth"
        android:layout_width="40dp"
        android:layout_height="5dp"
        android:layout_marginBottom="20dp"
        android:background="@color/red"
        app:layout_constraintBottom_toBottomOf="@+id/animation_center"
        app:layout_constraintLeft_toLeftOf="@id/animation_center"
        app:layout_constraintRight_toRightOf="@+id/animation_center" />


</android.support.constraint.ConstraintLayout>